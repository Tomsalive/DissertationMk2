<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
  	<meta http-equiv="X-UA-Compatible" content="IE=edge">
  	<meta name="viewport" content="width=device-width, initial-scale=1.0">
  	<title>Home</title>
	<style type="text/css">
		/* Header and Navigation Styles */
		.full-width-header {
		background-color: #333;
		color: #fff;
		padding: 10px 0;
		width: 100%;
		position: fixed;
		top: 0;
		left: 0;
		z-index: 10;
		}

		nav {
		display: flex;
		justify-content: space-between;
		align-items: center;
		max-width: 1200px;
		margin: 0 auto;
		}

		.logo {
		flex-grow: 1;
		}

		.logo a {
		font-size: 24px;
		font-weight: bold;
		color: #fff;
		text-decoration: none;
		}

		nav ul {
		list-style-type: none;
		margin: 0;
		padding: 0;
		display: flex;
		}

		nav ul li {
		margin-left: 20px;
		}

		.nav-btn {
		color: #fff;
		text-decoration: none;
		font-size: 16px;
		padding: 10px 15px;
		background-color: transparent;
		border: none;
		cursor: pointer;
		}

		.nav-btn:hover {
		background-color: #555;
		}
		
		/*Search Bar style*/

		.search-container {
		display: flex;
		justify-content: center;
		margin-top: 80px;
		}

		.search-input {
		width: 300px;
		padding: 10px;
		font-size: 16px;
		border: 1px solid #ccc;
		border-radius: 4px;
		}

		/* Map Styles */
		#map {
		height: 450px;
		width: 1000px;
		margin-top: 20px;
		margin-left: auto;
		margin-right: auto;
		display: block;
		}
	</style>
</head>

<body>
	<header class="full-width-header">
		<nav>
		  <div class="logo">
			<a href="">WS Housing Reviewer</a>
		  </div>
		  <ul>
			<%# <li><button type="button" class="nav-btn">About</button></li> %>
			<li><button type="button" class="nav-btn" onclick="window.location.href='/reviews'">Reviews</button></li>
			<li>
			  <form action="/logout?_method=DELETE" method="POST">
				<button type="submit" class="nav-btn">Log Out</button>
			  </form>
			</li>
		  </ul>
		</nav>
	</header>

	<div class="search-container">
		<input type="text" placeholder="Search..." class="search-input" id="search-input" onkeydown="handleKeydown(event)">
		<button type="button" class="search-btn" onclick="searchAddress()">Search</button>
	</div>

	<!--The div element for the map -->
	<div id="map"></div>

	<!--Add a script by google -->
	<script src=
"https://maps.googleapis.com/maps/api/js?key=<%= process.env.API_KEY || 'Invalid or No API Key' %>&callback=initMap&libraries=&v=weekly"
		async>
	</script>
	<script>
 
 let map;
let markers = [];

function initMap() {
  const winchester_city = {
    lat: 51.063696,
    lng: -1.319273
  };

  map = new google.maps.Map(document.getElementById('map'), {
    zoom: 13,
    center: winchester_city
  });
}

function addMarkers(reviews) {
  // Clear any existing markers
  clearMarkers();

  // Add a marker for each review
  reviews.forEach(review => {
    const location = { lat: review.latitude, lng: review.longitude };
    const marker = new google.maps.Marker({
      position: location,
      map: map
    });
    markers.push(marker);
  });
}

function clearMarkers() {
  // Remove all markers from the map
  markers.forEach(marker => marker.setMap(null));
  markers = [];
}

function searchAddress() {
  const searchInput = document.getElementById("search-input");
  let address = searchInput.value.trim();

  const geocoder = new google.maps.Geocoder();

  geocoder.geocode({ address: address }, (results, status) => {
    if (status === "OK") {
      const location = results[0].geometry.location;

      clearMarkers();
      addMarkers([{ latitude: location.lat(), longitude: location.lng() }]);

      map.setCenter(location);
      map.setZoom(13);
    } else {
      alert("Geocode was not successful for the following reason: " + status);
    }
  });
}

// Assuming you have an array of review objects with latitude and longitude properties
const reviews = [
  { id: 1, latitude: 51.064696, longitude: -1.320273 },
  { id: 2, latitude: 51.062696, longitude: -1.318273 },
  { id: 3, latitude: 51.063696, longitude: -1.321273 }
];

initMap();
addMarkers(reviews);

    </script>



</body>

</html>
